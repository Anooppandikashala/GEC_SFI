                        android:text="INVENTO 2K18"
                        android:textSize="25sp"
                        android:fontFamily="@font/robotoregular"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_height="wrap_content" />
