<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_home"
    android:background="#ffffff"
    tools:context="anoop.myprojects.gec_sfi.HomeActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_height="match_parent">


        <Button
            android:layout_width="252dp"
            android:layout_height="50dp"
            android:text="Events"
            android:textSize="20sp"
            android:gravity="left|center"
            android:padding="10dp"
            android:fontFamily="@font/robotoregular"
            android:textAllCaps="false"
            android:onClick="Events"
            android:background="@drawable/btnbackcse"
            android:drawableLeft="@drawable/ic_events"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_events"/>
        <Button
            android:layout_width="252dp"
            android:layout_height="50dp"
            android:text="Enquiry"
            android:fontFamily="@font/robotoregular"
            android:textSize="20sp"
            android:gravity="left|center"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:onClick="Enquiry"
            android:textAllCaps="false"
            android:background="@drawable/btnbackcse"
            android:drawableLeft="@drawable/ic_enquiry"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_enquiry"/>
        <Button
            android:layout_width="252dp"
            android:layout_height="50dp"
            android:text="Facilities"
            android:fontFamily="@font/robotoregular"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:gravity="left|center"
            android:padding="10dp"
            android:onClick="facilities"
            android:textAllCaps="false"
            android:background="@drawable/btnbackcse"
            android:drawableLeft="@drawable/ic_facilities"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_facilities"/>
        <Button
            android:layout_width="252dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Union"
            android:fontFamily="@font/robotoregular"
            android:textSize="20sp"
            android:gravity="left|center"

            android:onClick="unions"
            android:padding="10dp"
            android:textAllCaps="false"
            android:background="@drawable/btnbackcse"
            android:drawableLeft="@drawable/ic_union"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_union"/>

        <Button
            android:layout_width="252dp"
            android:layout_height="50dp"
            android:text="Credits"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:fontFamily="@font/robotoregular"
            android:gravity="left|center"
            android:padding="10dp"
            android:textAllCaps="false"
            android:background="@drawable/btnbackcse"
            android:drawableLeft="@drawable/ic_credits"
            android:drawablePadding="10dp"
            android:layout_marginBottom="9dp"
            android:drawableStart="@drawable/ic_credits"/>







    </LinearLayout>





</RelativeLayout>
