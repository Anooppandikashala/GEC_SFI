<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="anoop.myprojects.gec_sfi.Labs">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/labsoptimised"
            android:layout_height="410dp">

            <View
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_height="410dp"
                android:id="@+id/imageView3"
                />




            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:text="Clubs"
                        android:gravity="center"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="8sp"
                        android:textColor="#CCffffff"
                        android:textStyle="bold"


                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:text="Labs"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"


                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:text="Ladies Hostel"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="8sp"
                        android:textColor="#CCffffff"
                        android:textStyle="bold"


                        />





                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:padding="3.5dp"
                    android:layout_height="20dp"

                    />


            </LinearLayout>



        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:id="@+id/general"
                        android:layout_height="wrap_content"
                        android:text="General"
                        android:gravity="left|center_vertical"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingLeft="25dp"
                        android:drawablePadding="20dp"
                        android:drawableLeft="@drawable/ic_general"
                        />

                    <View
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:background="#b0bec5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/cselab"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:text="Computer Science &amp; .."
                        android:gravity="left|center_vertical"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingLeft="25dp"
                        android:drawablePadding="20dp"
                        android:drawableLeft="@drawable/ic_credits"
                        />

                    <View
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:background="#b0bec5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:id="@+id/ecelab"
                        android:layout_height="wrap_content"
                        android:text="Electronics &amp; Comm .."
                        android:gravity="left|center_vertical"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingLeft="25dp"
                        android:drawablePadding="20dp"
                        android:drawableLeft="@drawable/ic_ece"
                        />

                    <View
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:background="#b0bec5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:id="@+id/eeelab"
                        android:layout_height="wrap_content"
                        android:text="Electrical &amp; Electron .."
                        android:gravity="left|center_vertical"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingLeft="25dp"
                        android:drawablePadding="20dp"
                        android:drawableLeft="@drawable/ic_eee"
                        />

                    <View
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:background="#b0bec5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:id="@+id/itlab"
                        android:layout_height="wrap_content"
                        android:text="Information Technol .."
                        android:gravity="left|center_vertical"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingLeft="25dp"
                        android:drawablePadding="20dp"
                        android:drawableLeft="@drawable/ic_it"
                        />

                    <View
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:background="#b0bec5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:id="@+id/melab"
                        android:layout_height="wrap_content"
                        android:text="Mechanical Enginee .."
                        android:gravity="left|center_vertical"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingLeft="25dp"
                        android:drawablePadding="20dp"
                        android:drawableLeft="@drawable/ic_me"
                        />

                    <View
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:background="#b0bec5"
                        />
                </LinearLayout>





            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
