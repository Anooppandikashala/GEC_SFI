<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="anoop.myprojects.gec_sfi.WorkshopDesc">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/me"
            android:layout_height="150dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/back"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:text="Workshops"
            android:textSize="25sp"
            android:fontFamily="@font/robotoregular"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_height="wrap_content" />


        <ScrollView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"

                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btnbackcsewhite"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/lblListHeader"
                            android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                            android:textSize="16sp"
                            android:textColor="#000505"
                            android:onClick="headerClick"
                            android:text="Network Lab"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/robotoregular"
                            android:layout_height="50dp" />
                        <View
                            android:layout_width="match_parent"
                            android:background="@color/line"
                            android:id="@+id/edd"
                            android:visibility="gone"
                            android:layout_height="1dp"/>

                        <TextView
                            android:id="@+id/lblListItem"
                            android:textSize="12sp"
                            android:layout_marginBottom="30dp"
                            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                            android:paddingRight="?android:attr/expandableListPreferredChildPaddingLeft"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:visibility="gone"
                            android:text="dhjsdfdfdfdfhdhsjjnnvxnzdvjdjvjdjjzvdjsjs"
                            android:textColor="#021f25"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/robotoregular"
                            android:layout_height="wrap_content"
                            android:textIsSelectable="true"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btnbackcsewhite"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lblListHeader1"
                        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                        android:textSize="16sp"
                        android:textColor="#000505"
                        android:onClick="headerClick1"
                        android:text="hello header"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/robotoregular"
                        android:layout_height="50dp" />
                    <View
