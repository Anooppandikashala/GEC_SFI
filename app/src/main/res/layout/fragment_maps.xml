<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#779911"
    tools:context="anoop.myprojects.gec_sfi.Maps">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        >

        <!--RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/main_container"
            android:layout_height="match_parent">


            <pl.polidea.view.ZoomView
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_height="match_parent" />

        </RelativeLayout-->

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/ff"
            android:layout_marginTop="45dp"
            android:weightSum="1"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btnbackcsewhitesearch"
            android:gravity="center"
            android:layout_height="45dp">

            <AutoCompleteTextView
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.9"
                android:inputType="text"
                android:maxLines="1"
                android:layout_height="45dp"
                android:paddingRight="15dp"
                android:hint="Search"
                android:id="@+id/search"
                android:gravity="left|center"

                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:id="@+id/go"
                android:src="@drawable/ic_search_black_24dp"
                android:layout_height="wrap_content" />


        </LinearLayout>





        <ImageView
            android:layout_width="match_parent"
            android:layout_below="@+id/ff"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/mapoptimizednew"/>

        <View
            android:id="@+id/button4"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_above="@+id/button2"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            />

        <View
            android:id="@+id/button2"
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:layout_above="@+id/button3"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignStart="@+id/button3"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:background="@android:color/transparent" />

        <View
            android:id="@+id/button3"
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/ff"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/ff"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:background="@android:color/transparent" />


    </RelativeLayout>

</FrameLayout>
