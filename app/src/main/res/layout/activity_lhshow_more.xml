<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="anoop.myprojects.gec_sfi.facilities.LHShowMore">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/lh"
                android:layout_height="150dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/back"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="25dp"
                    android:text="Ladies Hostel(LH) Gec palakkad"
                    android:textSize="20sp"
                    android:fontFamily="@font/robotoregular"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:text="Warden"
                    android:textSize="16sp"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:fontFamily="@font/robotoregular"
                    android:textStyle="normal"
                    android:text="Warden: Sindhu\nHOD, Department of Mathematics\n+91 9446051125"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:text="Admissions criteria"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/robotoregular"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="20dp"
                    android:textSize="12sp"
                    android:gravity="left|center_horizontal"
                    android:fontFamily="@font/robotoregular"
                    android:textStyle="normal"
                    android:text="1. Caste(sc/st)\n2. Income(BPL/APL)\n3. Keam rank/Cgpa\n4. Distance from home town to college\n\n\t\tRent: Rs.200"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:text="Food"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/robotoregular"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/robotoregular"
                    android:textStyle="normal"
                    android:text="A mess committee including student representatives will decide the food menu for the month. Mess bill will be based on the food menu on that month and will divide equally among each members. Mess cut is included and the fee will vary according to mess cut.\n\nNB : Gates will be open between 6AM and 6:30PM "/>



            </LinearLayout>








        </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>
